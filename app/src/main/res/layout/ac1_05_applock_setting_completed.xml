<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            style="@style/btn_topleft_back"/>
        <TextView
            style="@style/top_textview"
            android:text="앱 잠금"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/ui_beige"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1. 앱 선택"
            android:textSize="20sp"
            android:background="@color/ui_beige"
            style="@style/text_blue_bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@style/text_blue_bold"
            android:background="@color/ui_beige"
            android:text="2. 암호 생성"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/text_blue_bold"
            android:text="3. 완료"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_height="90dp"
        android:text="현재 1개의 앱에 대해 앱 잠금 기능이 설정되었습니다."
        style="@style/text_background"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/btn_round_blue"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <TextView
        style="@style/text_beige_bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="현재 사용중인 암호"
        android:gravity="center_vertical"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_round_blue"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="패턴 잠금"
            style="@style/text_beige_bold"
            android:textSize="30dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_round_beige"
            android:text="PIN 잠금"
            style="@style/text_blue_bold"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>