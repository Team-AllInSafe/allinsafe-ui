<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            style="@style/btn_topleft_back"/>
        <TextView
            style="@style/top_textview"
            android:text="블루투스 관리"/>
    </LinearLayout>
    <TextView
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/bt_manage_init_background"
        style="@style/text_background"/>
    <TextView
        android:id="@+id/applock_setting"
        android:text="블루투스 관리 기능 설정하기"
        style="@style/btn_bottom_main"/>

</LinearLayout>