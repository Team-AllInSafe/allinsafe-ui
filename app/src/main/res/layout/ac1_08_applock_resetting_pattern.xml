<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            style="@style/btn_topleft_back"/>
        <TextView
            style="@style/top_textview"
            android:text="앱 잠금"/>
    </LinearLayout>
    <TextView
        android:layout_height="100dp"
        style="@style/text_background"
        android:text="@string/applock_resetting_pattern"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ui_red"
            android:text="패턴 추가 필요"
            android:textSize="30dp"
            android:gravity="center"/>

    </LinearLayout>
    <TextView
        android:id="@+id/btn_bottom_finish"
        style="@style/btn_bottom_finish"
        android:text="생성 완료"/>
</LinearLayout>