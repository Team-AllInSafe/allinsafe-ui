<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            style="@style/btn_topleft_back"/>
        <TextView
            style="@style/top_textview"
            android:text="앱 잠금"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_round_blue"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="패턴 잠금"
            style="@style/text_beige_bold"
            android:textSize="30dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_round_beige"
            android:text="PIN 잠금"
            style="@style/text_blue_bold"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ui_red"
            android:text="패턴 추가 필요"
            android:textSize="30dp"
            android:gravity="center"/>

    </LinearLayout>
    <TextView
        android:id="@+id/btn_bottom_back"
        style="@style/btn_bottom_back"/>
    <TextView
        android:id="@+id/btn_bottom_finish"
        style="@style/btn_bottom_finish"
        android:text="생성 완료"/>
</LinearLayout>